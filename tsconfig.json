{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"],
			"@/src/*": ["./src/*"],
			"@/components/*": ["./components/*"],
			"@/assets/*": ["./assets/*"],
			"@/app/*": ["./app/*"],
			"tailwind.config": ["./tailwind.config.js"]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		".expo/types/**/*.ts",
		"expo-env.d.ts",
		"nativewind-env.d.ts"
	]
}
